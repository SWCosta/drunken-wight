- if @standings
  %table#standings
    %thead
      %th #
      %th Mannschaft
      %th Spiele
      %th +
      %th -
      %th Î”
      %th .
    %tbody
      - @standings.order(:rank).each do |row|
        %tr
          %td= row.rank
          %td= country_with_flag(row.team_name)
          %td= row.matches
          %td= row.shot
          %td= row.got
          %td= row.diff
          %td= row.points
